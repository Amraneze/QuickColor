<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.justgame.quickcolor"
    android:theme="@style/BaseTheme">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name=".intro.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="fr.justgame.quickcolor.game.StartGameActivity"></activity>
        <activity android:name="fr.justgame.quickcolor.game.TutorialActivity"></activity>
        <activity android:name="fr.justgame.quickcolor.game.ui.TimerActivity"></activity>
        <activity android:name="fr.justgame.quickcolor.game.easy.EasyGameActivity"></activity>
        <activity android:name="fr.justgame.quickcolor.settings.SettingsActivity"></activity>
    </application>

</manifest>