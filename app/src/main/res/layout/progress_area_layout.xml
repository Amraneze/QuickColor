<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ProgressBar
        android:layout_width="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_height="30dp"
        android:id="@+id/progress_bar"
        android:progressDrawable="@drawable/timer_progress"
        android:max="800" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <fr.justgame.quickcolor.common.ui.CommonTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_score_label"
            android:text="Score :"
            android:textColor="@color/common_grey_text_color"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textSize="26.67sp"
            app:font_style="filbert_brush"/>

        <fr.justgame.quickcolor.common.ui.CommonTextView
            android:id="@+id/tv_score_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="150"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/common_grey_text_color"
            android:textSize="40sp"
            app:font_style="open_sans_bold"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</LinearLayout>
