<LinearLayout android:id="@+id/lay_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_game_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/custom_ripple" />

    <LinearLayout
        android:id="@+id/ll_start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ic_settings"
        android:animateLayoutChanges="true"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginTop="10dp"
            android:background="@drawable/logo" />

        <fr.justgame.quickcolor.common.ui.CommonTextView
            android:id="@+id/tv_best_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Best Score"
            android:textColor="#FF4D4D4D"
            android:textSize="46.67sp"
            app:font_style="filbert_brush" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_trophy"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:background="@drawable/ic_trophy" />

            <fr.justgame.quickcolor.common.ui.CommonTextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:includeFontPadding="false"
                android:text="26 111"
                android:textColor="#FFFF5C5C"
                android:textSize="61.25sp"
                app:font_style="open_sans_bold_italic" />

        </LinearLayout>

        <fr.justgame.quickcolor.common.ui.CommonButton
            android:id="@+id/btn_play"
            android:layout_width="175dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="Play now!"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:font_style="filbert_brush" />

        <fr.justgame.quickcolor.common.ui.CommonButton
            android:id="@+id/btn_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="Connect with" />

        <fr.justgame.quickcolor.common.ui.CommonButton
            android:id="@+id/btn_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button"
            android:text="connect" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_below="@id/ll_start_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|center_horizontal"
            ads:adSize="SMART_BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">

        </com.google.android.gms.ads.AdView>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include layout="@layout/settings_activity" />

    </FrameLayout>
</LinearLayout>